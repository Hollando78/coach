{
  "name": "football-coach-app",
  "version": "1.0.0",
  "description": "9-a-side football team management PWA",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "npm --workspace=backend run dev",
    "dev:frontend": "npm --workspace=frontend run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:backend": "npm --workspace=backend run build",
    "build:frontend": "npm --workspace=frontend run build",
    "start": "npm --workspace=backend run start",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "npm --workspace=backend run test",
    "test:frontend": "npm --workspace=frontend run test"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}